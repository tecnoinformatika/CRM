@model GestionLegalite.Models.actividade

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="chute chute-center">
    <div class="mw1000 center-block">
        <section id="content" class="table-layout animated fadeIn">

            <!-- -------------- Column Center -------------- -->

            <div class="allcp-form theme-primary tab-pane active mw600" id="login" role="tabpanel">
                <div class="panel fluid-width">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-md-9">
                                        <span class="panel-title">
                                            Editar actividad
                                        </span>
                                    </div>

                                </div>
                            </div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.actividad, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.actividad, new { htmlAttributes = new { @class = "gui-input" } })
                                    @Html.ValidationMessageFor(model => model.actividad, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-bordered btn-warning" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Regresar al listado", "Index")
                    </div>

                </div>
            </div>
            <!-- -------------- /Column Center -------------- -->
        </section>
    </div>
</div>