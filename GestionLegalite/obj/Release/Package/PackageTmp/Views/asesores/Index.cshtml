@model IEnumerable<GestionLegalite.Models.asesore>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="chute chute-center">
    <div class="mw1000 center-block">
        <section id="content" class="table-layout animated fadeIn">

            <!-- -------------- Column Center -------------- -->


            <div class="allcp-form theme-primary tab-pane active mw600" id="login" role="tabpanel">
                <div class="panel fluid-width">
                    <h2>Listado de asesores</h2>

                    <p>
                        @Html.ActionLink("Crear nuevo", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                Nombre de usuario
                            </th>
                            <th>
                                Contraseña
                            </th>
                            <th>
                                Nivel de acceso
                            </th>
                            <th>
                                Nombre completo
                            </th>
                            <th>
                                Salario base
                            </th>
                            <th>
                                Costo diario
                            </th>
                            <th>
                                Costo por hora
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreusuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nivel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.salariobasico)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.costodiario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.costohora)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.idasesor }) |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.idasesor }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idasesor })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <!-- -------------- /Panel -------------- -->
            </div>



            <!-- -------------- /Column Center -------------- -->

        </section>
    </div>
</div>